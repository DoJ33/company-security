<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ir.model.data -->

        <record model="ir.ui.view" id="ir_model_data_tree_view">
            <field name="name">ir.model.data.tree with company_id</field>
            <field name="model">ir.model.data</field>
            <field name="inherit_id" ref="base.view_model_data_list"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <data>
                    <tree position="inside">
                        <field name="company_id"/>
                    </tree>
                </data>
            </field>
        </record>

        <!-- res.company -->

        <record model="ir.ui.view" id="res_company_form_view">
            <field name="name">Create company instruction</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <data>
                    <field name="logo" position="before">
                        <field name="id" invisible="1"/>
                        <div attrs="{'invisible': [('id', '&gt;', 0)]}">
                            <h1>Please read the Multi-Company instructions</h1>
                        </div>
                    </field>
                    <notebook position="inside">
                        <page name="multicompany" string="Multi-Company">
                            <separator string="New Company"/>
                            <p>For security reasons, you must do the following to see the new company after you save it:</p>
                            <ol>
                                <li><b>Go to Companies (list view).</b></li>
                                <li><b>Select the company in the top menu, right side.</b></li>
                            </ol>
                        </page>
                        <page name="json" string="JSON">
                            <separator string="JSON"/>
                            <field name="json"/>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>

        <!-- res.users -->

        <record model="ir.ui.view" id="res_users_form_view">
            <field name="name">res.users select partner if missing</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group/field[@name='partner_id']" position="attributes">
                        <attribute name="readonly"/>
                        <attribute name="attrs">{'invisible': [('id', '=', False)], 'readonly': [('partner_id', '!=', False)]}</attribute>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>
